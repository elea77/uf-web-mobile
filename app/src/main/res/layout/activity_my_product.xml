<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MyProductActivity">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:gravity="center"
        android:padding="15dp"
        tools:text="Nom du produit"/>

    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#ffffff"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageUrlView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"
                tools:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="16dp"
                android:text="Date de mise en vente :"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dateView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="18dp"
                    tools:text="20/04/2021"/>

                <TextView
                    android:id="@+id/timeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="18dp"
                    tools:text="17h30"/>


            </LinearLayout>

            <TextView
                android:id="@+id/priceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="22dp"
                tools:text="135 €"/>


            <TextView
                android:id="@+id/descriptionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginHorizontal="2dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16dp"
                tools:text="Description du produit ici, description du produit ici, description du produit ici, description du produit ici, description du produit ici."/>


            <androidx.appcompat.widget.AppCompatButton
                android:onClick="auctionHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:backgroundTint="@color/light_orange"
                android:textColor="@color/white"
                android:text="Historique des enchères" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acceptSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:text="Accepter la vente" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/deleteProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:text="Supprimer le produit" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>